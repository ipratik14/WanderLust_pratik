<%layout("/layouts/boilerplate")%>
<div class="row">
<div class="col-8 offset-2 mt-3">
    

    <div class="card col-6 offset-3 listing-card">   
        <h3><%=listing.title%></h3>
    <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image" style="height:20rem">
    <div class="card-img-overlay"></div>
    <div class="card-body">
      <p class="card-text">
       
        <%=listing.description%>  <br>
        &#8377; <%=listing.price.toLocaleString("en-IN")%>/night <br>
        <%=listing.location%><br>
        <%=listing.country%>

      </p>
    </div>
    </div>

   
    <br>
    <div class="btns">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark offset-3 ">edit </a>
    <br><br>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
       <button class="btn btn-dark add-btn offset-5">Delete</button>
    </form>
    </div>

</div>


<div class="col-8 offset-3 mb-3">
  <hr>
  <h4> Leave a review </h4>
  <form action="./listings/<%=listing._id%>/review" 
    method="POST" 
    novalidate
    class="needs-validation" 
    > 
   <div class="mt-3 mb-3" >
    <label for="rating" class="form-label">Rating</label>
    <input 
      type="range" 
      min="1" max="5" 
      id="rating" 
      name="review[rating]" 
      class="form-range">
   </div>
   <div class="mt-3 mb-3">
    <label for="comment" class="form-label">Comment</label>
    <textarea 
     name="review[comment]" 
     id="comment" 
     cols="30" 
     rows="5" 
     class="form-control"
     required>
    </textarea>
    <div class="valid-feedback">enter textarea</div>
    <button class="btn btn-outline-dark mt-3">Submit</button>
   </div>
  </form>
  <hr>




  <p><b>All Reviews</b></h4>
  
  <div class="row">
    <% for(review of listing.reviews){%>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">Pratik</h5>
          <P class="card-text"><%=review.comment%></P>
          <p class="card-text"><%=review.rating%></p>
        </div>
        <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
          <button class="btn btn-sm btn-dark">DELETE</button>
        </form>
      </div>
     <%}%>
  </div>
</div>
</div>